#get-credentials.modal.fade(tabindex ='-1', role='dialog',aria-labelledby="myModalLabel", aria-hidden="true")
	div.modal-dialog
		div.modal-content
			div.modal-header
				button.close(data-dismiss='modal') x
				h3#myModalLabel.modal-title Recuperar contraseña
			div.modal-body
				form(method='post')#get-credentials-form
					p Ingresa el correo electrónico asociado a tu cuenta
					input(type="text", name="email", id='email-lg').col-md-10
					hr
					button(type='button')#btnEnviar.btn.btn-primary
						span.glyphicon.glyphicon-envelope 
						|   enviar
					div.alert.alert-danger.hide
					button(data-dismiss='alert').close
			div.modal-footer